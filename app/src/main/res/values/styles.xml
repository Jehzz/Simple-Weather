<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SimpleWeatherTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ButtonSettings" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
        <item name="android:background">@drawable/ic_settings_24dp</item>
        <item name="android:description">@string/settings</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="ButtonSave" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/save</item>
    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorPrimary">?attr/colorOnBackground</item>
    </style>

</resources>
