<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
        <item name="android:background">@drawable/ic_settings_24dp</item>
        <item name="android:description">@string/settings</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SaveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/save</item>
    </style>

    <style name="BlueThemeOverlay">
        <item name="colorPrimary">@color/colorCool</item>
    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorPrimary">?attr/colorOnBackground</item>
    </style>

</resources>
